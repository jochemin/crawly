# Environment Variables for Crawly Project
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:YOUR_PASSWORD_HERE@localhost:5432/bnetwork

# For Python scripts
DB_HOST=localhost
DB_NAME=bnetwork
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE

# ============================================
# MAXMIND GEOIP
# ============================================
# Get your license key from: https://www.maxmind.com/en/accounts/current/license-key
MAXMIND_LICENSE_KEY=your_license_key_here

# ============================================
# ANDROID KEYSTORE (for release builds)
# ============================================
# Path to your release keystore (store outside repository!)
CRAWLY_KEYSTORE_PATH=/path/to/your/crawly-release-key.keystore
CRAWLY_KEYSTORE_PASSWORD=your_keystore_password_here
CRAWLY_KEY_ALIAS=crawly-key-alias
CRAWLY_KEY_PASSWORD=your_key_password_here

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development
